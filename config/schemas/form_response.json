{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "live_in_england",
    "nhs_letter",
    "name",
    "date_of_birth",
    "support_address",
    "know_nhs_number",
    "essential_supplies",
    "basic_care_needs",
    "dietary_requirements",
    "carry_supplies"
  ],
  "additionalProperties": false,
  "properties": {
    "live_in_england": {
      "$ref": "#/definitions/yes_no"
    },
    "nhs_letter": {
      "type": "string",
      "enum": [
        "Yes, I’ve been told to shield",
        "No, I haven’t been told to shield",
        "Not sure"
      ]
    },
    "medical_conditions": {
      "type": "string",
      "enum": [
        "Yes, I have one of the listed medical conditions",
        "No, I do not have one of the listed medical conditions"
      ]
    },
    "name": {
      "type": "object",
      "required": [
        "first_name",
        "last_name"
      ],
      "additionalProperties": false,
      "properties": {
        "first_name": {
          "type": "string"
        },
        "middle_name": {
          "type": ["string", "null"]
        },
        "last_name": {
          "type": "string"
        }
      }
    },
    "date_of_birth": {
      "type": "object",
      "required": [
        "year",
        "month",
        "day"
      ],
      "additionalProperties": false,
      "properties": {
        "year": {
          "type": "string",
          "pattern": "^[0-9]{2,}$"
        },
        "month": {
          "type": "string",
          "pattern": "^[0-9]{1,2}$"
        },
        "day": {
          "type": "string",
          "pattern": "^[0-9]{1,2}$"
        }
      }
    },
    "support_address": {
      "type": "object",
      "required": [
        "building_and_street_line_1",
        "town_city",
        "postcode"
      ],
      "additionalProperties": false,
      "properties": {
        "building_and_street_line_1": {
          "type": "string"
        },
        "building_and_street_line_2": {
          "type": ["string", "null"]
        },
        "town_city": {
          "type": "string"
        },
        "county": {
          "type": ["string", "null"]
        },
        "postcode": {
          "type": "string",
          "pattern": "^[A-Za-z0-9 ]{4,}$"
        }
      }
    },
    "contact_details": {
      "type": "object",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "phone_number_calls": {
          "type": ["string", "null"],
          "pattern": "^[0-9 ]*$"
        },
        "phone_number_texts": {
          "type": ["string", "null"],
          "pattern": "^[0-9 ]*$"
        },
        "email": {
          "type": ["string", "null"],
          "pattern": "[@]{1}"
        }
      }
    },
    "know_nhs_number": {
      "type": "string",
      "enum": [
        "Yes, I know my NHS number"
      ]
    },
    "nhs_number": {
      "type": ["string", "null"],
      "pattern": "^[0-9]*$"
    },
    "essential_supplies": {
      "$ref": "#/definitions/yes_no"
    },
    "basic_care_needs": {
      "$ref": "#/definitions/yes_no"
    },
    "dietary_requirements": {
      "$ref": "#/definitions/yes_no_optional"
    },
    "carry_supplies": {
      "$ref": "#/definitions/yes_no_optional"
    },
    "reference_id": {
      "type": "string"
    }
  },
  "definitions": {
    "yes_no": {
      "type": "string",
      "enum": ["Yes", "No"]
    },
    "yes_no_optional": {
      "type": ["string", "null"],
      "enum": ["Yes", "No", null]
    }
  }
}
