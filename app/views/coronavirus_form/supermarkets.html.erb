<% content_for :title do %>
  <%= t("coronavirus_form.questions.supermarkets.title") %>
<% end %>

<% content_for :meta_tags do %>
  <meta name="description" content="<%= t('coronavirus_form.questions.supermarkets.title') %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
<% end %>

<%= form_tag({},
  "data-module": "track-coronavirus-form-vulnerable-people-supermarkets",
  "data-question-key": "supermarkets",
  "id": "supermarkets",
  "novalidate": "true"
) do %>
<%= render "govuk_publishing_components/components/radio", {
  heading: t("coronavirus_form.questions.supermarkets.title"),
  hint: t("coronavirus_form.questions.supermarkets.hint"),
  is_page_heading: true,
  name: "supermarkets",
  error_message: error_items("supermarkets"),
  items: t("coronavirus_form.questions.supermarkets.options").map do |_, item|
    {
      value: item[:label],
      text: item[:label],
      checked: session[:supermarkets] == item[:label],
    }
  end
} %>
<%= render "govuk_publishing_components/components/button", text: "Continue", margin_bottom: true %>
<% end %>
